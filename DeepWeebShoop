void haslo()
{
    string h;
    int d=1,liczba;
    do
    {
        cin>>h;
        if(h=="kekz")
        cout<<"Access granted"<<endl;
        else
        cout<<"Access denied"<<endl;
    }while (h!="kekz");
    do
    {
    cout<<endl;
    d++;
    }while(d<=10);
}

